<AnchorPane prefHeight="517.0" prefWidth="603.0" style="-fx-background-color: lightgrey;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ce316project.Controller">
    <children>
        <TextField fx:id="newConfigName" layoutX="68.0" layoutY="110.0" prefHeight="54.0" prefWidth="477.0" promptText="Configuration Name" style="-fx-border-color: black;" />
        <TextField fx:id="newConfigPath" layoutX="68.0" layoutY="204.0" prefHeight="42.0" prefWidth="300.0" promptText="Compiler Path" style="-fx-border-color: black;" />
        <Button fx:id="newConfigCreateButton" layoutX="375.0" layoutY="434.0" mnemonicParsing="false" onAction="#createConfigurationOnAction" prefHeight="26.0" prefWidth="178.0" style="-fx-border-color: black;" stylesheets="@../../../style.css" text="CREATE" />
        <Button fx:id="newConfigChooseButton" layoutX="384.0" layoutY="204.0" mnemonicParsing="false" onAction="#chooseNewConfig" prefHeight="42.0" prefWidth="161.0" style="-fx-border-color: black;" stylesheets="@../../../style.css" text="CHOOSE" />
      <MenuButton fx:id="chooseConfigLanguage" layoutX="68.0" layoutY="291.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="300.0" style="-fx-border-color: black; -fx-background-color: white;" text="Choose Language">
        <items>
          <MenuItem fx:id="chooseJavaConfig" mnemonicParsing="false" onAction="#javaConfigOnAction" text="JAVA" />
          <MenuItem fx:id="chooseC_Config" mnemonicParsing="false" onAction="#cConfigMenuOnAction" text="C" />
            <MenuItem fx:id="chooseCppConfig" mnemonicParsing="false" onAction="#cPPConfigOnAction" text="C++" />
            <MenuItem fx:id="choosePythonConfig" mnemonicParsing="false" onAction="#pythonConfigOnAction" text="PYTHON" />
        </items>
      </MenuButton>
      <Button fx:id="newConfigBackButton" layoutX="68.0" layoutY="434.0" mnemonicParsing="false" onAction="#backToNewProject" prefHeight="26.0" prefWidth="178.0" style="-fx-border-color: black;" stylesheets="@../../../style.css" text="BACK" />
      <Button fx:id="importConfigurationButton" layoutX="447.0" layoutY="24.0" mnemonicParsing="false" onAction="#importConfigButton" prefHeight="42.0" prefWidth="98.0" style="-fx-border-color: black;" stylesheets="@../../../style.css" text="IMPORT" />
      <Label layoutX="68.0" layoutY="14.0" prefHeight="62.0" prefWidth="292.0" text="New Configuration" textAlignment="RIGHT">
         <font>
            <Font name="Arial Bold" size="30.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
