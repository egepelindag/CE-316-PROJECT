      <Button fx:id="importConfigurationButton" layoutX="323.0" layoutY="230.0" mnemonicParsing="false" onAction="#importConfigButton" prefHeight="42.0" prefWidth="217.0" style="-fx-border-color: black; -fx-border-radius: 100; -fx-background-radius: 100;" stylesheets="@../../../style.css" text="IMPORT" />
    </children>
</AnchorPane>
